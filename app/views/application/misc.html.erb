    <%= render "element", element: element %>
  <% end %>

  <%= tr do %>
    <%= td class: "text-right" do %>
      <%= button_group "aria-label" => "Labelling" do %>
        <%= button primary: true do %>
          Testing
        <% end %>
        <%= button primary: true do %>
          Testing 2
        <% end %>
        <%= button primary: true do %>
          Testing 3
        <% end %>
      <% end %>
    <% end %>
    <%= td do %>
      <%= pre id: "buttonGroup" do %>
        <%%= button_group "aria-label" => "Labelling" do %>
          <%%= button primary: true do %>
            Testing
          <%% end %>
          <%%= button primary: true do %>
            Testing 2
          <%% end %>
          <%%= button primary: true do %>
            Testing 3
          <%% end %>
        <%% end %>
      <% end %>
      <%= button info: true, class: "copyButton pull-right", "data-target" => "buttonGroup", sm: true do %>Copy<% end %>
    <% end %>
  <% end %>

  <%= tr do %>
    <%= td class: "text-right" do %>
      <%= image src: "https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRgDKJeeHPHtfNrm4Z9ghtI-8l6Bpdb-Vf0vcyk4cM9ZWSWWJsXYxmOQ3Q", alt: "hello", circle: true %>
    <% end %>
    <%= td do %>
      <%= pre id: "image" do %>
        <%%= image src: "...", alt: "hello", circle: true %>
      <% end %>
      <%= button info: true, class: "copyButton pull-right", "data-target" => "image", sm: true do %>Copy<% end %>
    <% end %>
  <% end %>

<% end %>
