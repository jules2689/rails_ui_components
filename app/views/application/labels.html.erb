<% content_for :title do %>Label Elements<% end %>

<%= h2 do %>Contextual Classes<% end %>
<%= table do %>
  <% Bootstrap::LabelHelper::CONTEXTUAL_CLASSES.each do |class_type| %>
    <%= render "element", element: :label, opts: { class_type => true } %>
  <% end %>
<% end %>

<%= h2 do %>Pills<% end %>
<%= table do %>
  <% Bootstrap::LabelHelper::CONTEXTUAL_CLASSES.each do |class_type| %>
    <%= render "element", element: :label, opts: { class_type => true, pill: true } %>
  <% end %>
<% end %>
