<% if defined?(opts) %>

  <%= tr do %>
    <%= td class: "text-right" do %>
      <%= self.send element, opts.deep_dup do %>
        This is <%= indefinite_articlerize(element) %> tag
        <%= yield %>
      <% end %>
    <% end %>

    <%= td do %>
      <%= pre id: element do %>
        <%= "<%=" %> <%= element %> <%= opts_to_string(opts.deep_dup) %> do %>
          This is <%= indefinite_articlerize(element) %> tag
          <%= yield :alert %>
        <%% end %>
      <% end %>
      <%= button info: true, class: "copyButton pull-right", "data-target" => element, sm: true do %>Copy<% end %>
    <% end %>
  <% end %>

<% else %>

  <%= tr do %>
    <%= td class: "text-right" do %>
      <%= self.send element, class: "banana" do %>
        This is <%= indefinite_articlerize(element) %> tag
        <%= yield %>
      <% end %>
    <% end %>

    <%= td do %>
      <%= pre id: element do %>
        <%= "<%=" %> <%= element %> class: "banana" do %>
          This is <%= indefinite_articlerize(element) %> tag
          <%= yield :alert %>
        <%% end %>
      <% end %>
      <%= button info: true, class: "copyButton pull-right", "data-target" => element, sm: true do %>Copy<% end %>
    <% end %>
  <% end %>


<% end %>
