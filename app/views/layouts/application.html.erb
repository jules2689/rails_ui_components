<!DOCTYPE html>
<html>
<head>
  <title>Rails UI Components - <%= yield :title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= nav do %>
    <%= div class: "container" do %>
      <%= nav_brand do %><%= yield :title %><% end %>
      <%= nav_dropdown class: "pull-right", button: { secondary: true } do %>
        <% app_routes.each do |route| %>
          <%= a href: route.to_s, class: "dropdown-item" do %><%= route.to_s.humanize %> Elements<% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= div class: "container" do %>
    <%= yield %>
  <% end %>

</body>
</html>
